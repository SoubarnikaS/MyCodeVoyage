Problem statement link:
https://www.codechef.com/practice/PCPPAR01/problems/RUNCOMPARE

Platform:
CodeChef

Solution:
#include <iostream>
using namespace std;
int Happy(int Alice[],int Bob[],int n)
{
    int happy = 0;
    for(int i = 0; i < n; i++)
        if(Alice[i] <= 2*Bob[i] && Bob[i] <= 2*Alice[i])
            happy++;
    return happy;
    
}
int main() 
{
	int T,happy = 0,n;
	cin>>T;
	while(T != 0)
	{
	    cin>>n;
	    int Alice[n],Bob[n];
	    
	    for(int i = 0; i < n; i++)
	        cin>>Alice[i];
	        
	    for(int i = 0; i < n; i++)
	        cin>>Bob[i];
	
	    cout<<Happy(Alice,Bob,n)<<endl;
	    T--;
	    
	}
	return 0;
}
