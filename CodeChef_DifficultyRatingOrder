Problem Statement Link:
https://www.codechef.com/practice/PCPPAR01/problems/RATINGINPRAC

Platform:
Codechef

Solution:
#include<iostream>
using namespace std;
bool difficultyOrder(int arr[],int n)
{
    int flag = 0;
    for(int i = 1; i < n; i++)
        if(arr[i] < arr[i - 1])  
           return false;      //return false if they are not in non-decreasing order
    return true;
    
}
int main()
{
    int N,n;
    cin>>N;
  
    while(N != 0)
    {
        cin>>n;
        int arr[n];
        for(int i = 0; i < n; i++)  
            cin>>arr[i];
        if(difficultyOrder(arr,n))
            cout<<"Yes"<<endl;
        else
            cout<<"No"<<endl;
        N--;
    }
}
